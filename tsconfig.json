{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "ESNext",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Intl",
            "ESNext.Symbol",
            "DOM"
        ],
        "outDir": "dist",
        "baseUrl": "src",
        "strict": false,
        "strictFunctionTypes": false,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": ["./src/types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
        "files": true
    }
}
